<!doctype html>
<html ng-app='myApp' ng-controller='strCtrl'>
<head>
	<title>LDS Program</title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>


<header menu>
	<div class="login">
		user name<input type="text" name="userName" placeholder="user name..">
		password<input type="password" name="userName" placeholder="password..">
	</div>
	<div class="logo"></div>
	<div id="clearflex"></div>
	<!-- <div class="menuItem" ng-click='settingsMenu()'>{{str.settings}}</div>
	<div class="menuItem">{{str.distribution}}</div>
	<div class="menuItem">{{str.wards}}</div> -->
	<div class="menuItem">{{str.programs}}</div>
</header>
<!-- menus  -->
