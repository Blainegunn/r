<script src="/javascripts/modules.js"></script>
<script src="/javascripts/actions.js"></script>
<script src="/javascripts/controllers.js"></script>
<script src="/javascripts/directives.js"></script>
<script src="/javascripts/fire.js"></script>
</body>
</html>